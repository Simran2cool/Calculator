<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeApp.espresso">
    <ContentPage.Content>
        <StackLayout BackgroundColor="SandyBrown">
            <Label Text="ESPRESSO" FontSize="25" Margin="20"
                HorizontalOptions="CenterAndExpand" />
            <Frame BackgroundColor="Brown"  CornerRadius="0">
                <Label Text="Cafe American                                             $2.50"  TextColor="White"  FontSize="18" />
            </Frame>
            <Frame BackgroundColor="Brown"  CornerRadius="0">
                <Label Text="Cafe Latte`                                                    $3.00"  TextColor="White"  FontSize="18" />
            </Frame>
            <Frame BackgroundColor="Brown"  CornerRadius="0">
                <Label Text="Cappucino                                                    $3.50"  TextColor="White"  FontSize="18" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>